rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Presence collection - Real-time online user tracking
    match /presence/{userId} {
      // Anyone authenticated can read presence data (to see who's online)
      allow read: if isAuthenticated();

      // Users can only create/update/delete their own presence document
      allow create, update: if isAuthenticated() && isOwner(userId);
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // Evidence collection
    match /evidence/{docId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAuthenticated() && isAdmin();
    }

    // KPI Data collection
    match /kpi_data/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // SAR Contents collection
    match /sar_contents/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // Risks collection
    match /risks/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // Q&A Bank collection
    match /qa_bank/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // Strategy Links collection
    match /strategy_links/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }

    // Cycles collection
    match /cycles/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Units collection
    match /units/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{docId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Activity Log collection
    match /activity_log/{docId} {
      allow read: if isAuthenticated() && isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false; // Logs are immutable
    }

    // Announcements collection
    match /announcements/{docId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
